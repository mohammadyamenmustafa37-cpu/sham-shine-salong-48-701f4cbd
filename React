import React from 'react';
import { Scissors, UserCheck, Palette } from 'lucide-react';

interface ServiceCardProps {
  title: string;
  price: string;
  iconType?: 'scissors' | 'beard' | 'palette';
}

const ServiceCard: React.FC<ServiceCardProps> = ({ title, price, iconType = 'scissors' }) => {
  const getIcon = () => {
    switch (iconType) {
      case 'scissors':
        return <Scissors className="w-8 h-8 text-secondary" />;
      case 'beard':
        return <UserCheck className="w-8 h-8 text-secondary" />;
      case 'palette':
        return <Palette className="w-8 h-8 text-secondary" />;
      default:
        return <Scissors className="w-8 h-8 text-secondary" />;
    }
  };

  return (
    <article className="bg-card p-6 rounded-xl shadow-lg border border-border/20 salon-shine
                       flex items-center justify-between w-full" 
             role="listitem"
             itemScope 
             itemType="https://schema.org/Service">
      <div className="flex items-center gap-4">
        <div className="flex-shrink-0">
          {getIcon()}
        </div>
        <h3 className="text-lg font-bold text-white" itemProp="name">
          {title}
        </h3>
      </div>
      <div className="flex-shrink-0">
        <span className="text-xl font-bold text-white bg-secondary/10 
                         px-3 py-1 rounded-lg"
              itemProp="offers" 
              itemScope 
              itemType="https://schema.org/Offer">
          <span itemProp="price">{price}</span> 
          <span itemProp="priceCurrency" content="SEK">kr</span>
        </span>
      </div>
    </article>
  );
};

export default ServiceCard;
